{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Agent",
			"port": 6009,
			"cwd": "${workspaceFolder}",
			"outFiles": ["${workspaceFolder}/dist/agent.js"],
			"skipFiles": ["<node_internals>/**", "**/node_modules/**", "**/resources/app/out/vs/**"],
			"smartStep": true,
			"sourceMaps": true
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Agent VS",
			"port": 6009,
			"cwd": "${workspaceFolder}",
			"outFiles": [
				"${userHome}/AppData/Local/Microsoft/VisualStudio/**/Extensions/New Relic/**/agent/agent.js"
			],
			"skipFiles": ["<node_internals>/**", "**/node_modules/**"],
			"smartStep": true,
			"sourceMaps": true
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Agent (debug node_modules)",
			"port": 6009,
			"cwd": "${workspaceFolder}",
			"outFiles": ["${workspaceFolder}/dist/agent.js"],
			"smartStep": true,
			"sourceMaps": true
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Unit Tests",
			"port": 9229,
			"cwd": "${workspaceFolder}",
			"outFiles": ["${workspaceFolder}/dist/agent.js"],
			"smartStep": true,
			"sourceMaps": true
		},
		{
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "npx",
			"name": "Run UnitTests for File",
			"program": "jest",
			"args": ["${file}"],
			"cwd": "${workspaceFolder}/",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "node",
			"name": "Run UnitTests",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": [
				"-u",
				"tdd",
				"-r",
				"ts-node/register",
				"-r",
				"esm",
				"--timeout",
				"999999",
				"--colors",
				"--recursive",
				"test/unit/**/*.spec.ts"
			],

			"cwd": "${workspaceFolder}/",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"env": {
				"TS_NODE_COMPILER_OPTIONS": "{ \"module\": \"commonjs\", \"types\": [\"node\"] }"
			}
		},
		{
			"name": "Debug/Watch Current File Jest Tests",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"program": "./node_modules/.bin/jest",
			"args": ["--runInBand", "--watch", "${file}"],
			"env": {
				"NEW_RELIC_ENABLED": false
			},
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		}
	]
}
